{
  "name": "knowledgebase",
  "version": "0.0.1",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "predev": "rimraf build",
    "dev": "run-p dev:*",
    "dev-disable-deactication": "cross-env DISABLE_DEACTIVATION=\"true\" npm run dev",
    "dev:start": "wait-on ./build/index.html && cross-env NODE_ENV=\"development\" electron .",
    "dev:compile": "tsc -w -p tsconfig.main.json",
    "dev:webpack": "webpack --watch --progress",
    "build:dev": "tsc -p tsconfig.main.json && webpack --progress",
    "build:prod": "tsc -p tsconfig.main.json && cross-env NODE_ENV=\"production\" webpack --progress",
    "format": "prettier --write '**/*.{js,ts,jsx,tsx}'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "predist": "rimraf dist",
    "dist": "npm run build:prod && electron-builder"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/markdown-it": "^12.2.3",
    "@types/marked": "^4.0.1",
    "@types/node": "^16.11.12",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "electron-log": "^4.4.3",
    "highlight.js": "^11.3.1",
    "markdown-it": "^12.3.0",
    "marked": "^4.0.7",
    "node-html-parser": "^5.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.5.3"
  },
  "devDependencies": {
    "@types/mini-css-extract-plugin": "^2.4.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "mini-css-extract-plugin": "^2.4.5",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.45.0",
    "sass-loader": "^12.4.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "wait-on": "^6.0.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "prettier --write"
  },
  "build": {
    "appId": "dev.insidehakumai.knowledgebase",
    "productName": "Knowledgebase",
    "files": [
      "build/**/*"
    ],
    "extraResources": [
      "assets/**/*"
    ]
  }
}
